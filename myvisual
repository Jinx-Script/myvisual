    if isStateLoopRunning then
        isStateLoopRunning = false
        if stateLoopThread then
            task.cancel(stateLoopThread)
        end
    end
    
    -- Clean up ESPs
    for _, data in pairs(AttachedESP) do
        if data.Label and data.Label.Parent then 
            data.Label.Parent:Destroy() 
        end
    end
    
