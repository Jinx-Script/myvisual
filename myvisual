                    if type(key) == "string" and key:lower():find("mut") and type(value) == "string" then
                        displayText = displayText .. "<font color='rgb(255,255,150)'>" .. key .. ": " .. tostring(value) .. "</font>\n"
                        break
                    end
                end
            end
