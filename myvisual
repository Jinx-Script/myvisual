-- Experimental: Start Mutation Without Pet
UI:CreateButton("Pet", "Start Mutation (No Pet)", function()
    local success, error = pcall(function()
        -- Check if ReplicatedStorage and GameEvents exist
        if not ReplicatedStorage then
           -- print("‚ùå ReplicatedStorage not found!")
            return
        end
        
        local gameEvents = ReplicatedStorage:FindFirstChild("GameEvents")
        if not gameEvents then
           -- print("‚ùå GameEvents not found in ReplicatedStorage!")
            return
        end
        
        local mutationService = gameEvents:FindFirstChild("PetMutationMachineService_RE")
        if not mutationService then
           -- print("‚ùå PetMutationMachineService_RE not found!")
            return
        end
        
        -- Get machine data to check current state
        local machineData = GetMutationMachineData()
        if not machineData then
            --print("‚ùå No mutation machine data found!")
            return
        end
        
        if machineData.IsRunning then
            --print("‚ùå Machine is already running!")
            return
        end
        
        if machineData.TimeLeft and machineData.TimeLeft > 0 then
           -- print("‚ùå Machine is already processing!")
            return
        end
        
        -- Try different server commands to start without pet
       -- print("üß™ Attempting to start mutation machine without pet...")
        
        -- Try various possible server commands
        local commands = {
            "StartMachine",
            "StartMachineEmpty", 
            "StartWithoutPet",
            "ForceStart",
            "EmptyStart",
            "TestStart"
        }
        
        for _, command in ipairs(commands) do
            local cmdSuccess, cmdError = pcall(function()
                mutationService:FireServer(command)
               -- print("üì° Tried command: " .. command)
            end)
            
            if not cmdSuccess then
               -- print("‚ö†Ô∏è Command " .. command .. " failed: " .. tostring(cmdError))
            end
            
            task.wait(0.1) -- Small delay between commands
        end
        
       -- print("üî¨ Experimental start commands sent! Check machine status.")
        
    end)
    
    if not success then
       -- print("‚ùå Error in experimental start: " .. tostring(error))
    end
end, "left")

